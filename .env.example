# ============================================
# GitHub Credentials (for local Docker build)
# ============================================
# Required to fetch com.kaustack:jwt dependency during Docker build
# Create a GitHub Personal Access Token with 'read:packages' scope
# GitHub URL: Settings → Developer settings → Personal access tokens
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=ghp_your-personal-access-token

# ============================================
# Database Configuration
# ============================================
# Configure to connect to your external PostgreSQL database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/auth_db
SPRING_DATASOURCE_USERNAME=auth_user
SPRING_DATASOURCE_PASSWORD=auth_password

# ============================================
# JWT Configuration
# ============================================
# EdDSA keys
JWT_ACCESS_TOKEN_PRIVATE_KEY=YOUR_PRIVATE_KEY
JWT_ACCESS_TOKEN_PUBLIC_KEY=YOUR_PUBLIC_KEY
JWT_ACCESS_TOKEN_EXPIRATION=300000
JWT_REFRESH_TOKEN_PRIVATE_KEY=YOUR_PRIVATE_KEY
JWT_REFRESH_TOKEN_PUBLIC_KEY=YOUR_PUBLIC_KEY
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_ISSUER=kaugroups

# ============================================
# OAuth2 Configuration
# ============================================
APP_OAUTH2_REDIRECT_URI=http://localhost:3000/oauth2/redirect
APP_OAUTH2_HOSTED_DOMAIN=
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
